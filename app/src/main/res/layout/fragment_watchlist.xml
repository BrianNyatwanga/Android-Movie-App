<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".fragment_watchlist">

    <data>
        <variable
            name="viewModel"
            type="com.movies.streamy.viewmodel.WatchlistViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Buttons for each category -->
        <Button
            android:id="@+id/btnGenre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Genre" />

        <Button
            android:id="@+id/btnFavorite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Favorite" />

        <Button
            android:id="@+id/btnRecent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Recent" />

        <Button
            android:id="@+id/btnTvSeries"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TV Series" />

        <!-- Placeholder for displaying selected movie details -->
        <TextView
            android:id="@+id/tvSelectedMovieDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textSize="18sp" />

    </LinearLayout>
</layout>
