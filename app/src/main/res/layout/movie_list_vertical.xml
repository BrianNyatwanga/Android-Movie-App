<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="FavMovieEntity"
            type="com.movies.streamy.room.favorites.FavMovieEntity"
            />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/black">
            <ImageView
                android:id="@+id/image"
                android:layout_width="150dp"
                android:layout_height="225dp"
                android:scaleType="centerCrop"
                android:paddingEnd="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:src="@tools:sample/avatars"/>
        <TextView
            style="@style/CustomTextStyle"
            android:textStyle="bold"
            android:id="@+id/name"
            android:text="Name"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/MovieName"
            app:layout_constraintStart_toEndOf="@+id/image"
           />
        <TextView
            android:id="@+id/MovieName"
            style="@style/CustomTextStyle"
            android:textStyle="bold"
            android:text="@string/movie_name"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/name"
            app:layout_constraintEnd_toEndOf="parent"
           />
        <TextView
            style="@style/CustomTextStyle"
            android:id="@+id/textType"
            android:text="@string/type"
            app:layout_constraintTop_toBottomOf="@id/MovieName"
            app:layout_constraintStart_toEndOf="@id/image"
            />


        <TextView
            android:id="@+id/Type"
            style="@style/CustomTextStyle"
            android:text="@string/type"
            app:layout_constraintTop_toBottomOf="@+id/MovieName"
            app:layout_constraintStart_toEndOf="@id/textType"

            />
        <TextView
            style="@style/CustomTextStyle"
            android:id="@+id/textYear"
            android:text="@string/year"
            app:layout_constraintTop_toBottomOf="@id/Type"
            app:layout_constraintStart_toEndOf="@id/image"
         />

        <TextView
            android:id="@+id/year"
            style="@style/CustomTextStyle"
            android:text="@string/year"
            app:layout_constraintTop_toBottomOf="@id/Type"
            app:layout_constraintStart_toEndOf="@id/textYear"

            />
        <TextView
            style="@style/CustomTextStyle"
            android:id="@+id/textCountry"
            android:text="@string/country"
            app:layout_constraintTop_toBottomOf="@id/year"
            app:layout_constraintStart_toEndOf="@id/image"
        />

        <TextView
            android:id="@+id/country"
            style="@style/CustomTextStyle"
            android:text="@string/country"
            app:layout_constraintTop_toBottomOf="@id/year"
            app:layout_constraintStart_toEndOf="@id/textCountry"
            />


        <TextView
            style="@style/CustomTextStyle"
            android:text="Rating"
            android:id="@+id/textVote"
            app:layout_constraintTop_toBottomOf="@+id/country"
            app:layout_constraintStart_toEndOf="@+id/image"

            app:layout_constraintHorizontal_bias="0.5" />


        <TextView
            android:id="@+id/genre"
            style="@style/CustomTextStyle"
            android:text="@string/genre"
            app:layout_constraintTop_toBottomOf="@+id/country"
            app:layout_constraintStart_toEndOf="@id/textVote"
         />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
